<Architecture name=slc3_ia32_gcc323_dbg>
<Flags CXXFLAGS="-g">
<makefile>
F77compiler:=g77
CCcompiler:=gcc3
CXXFLAGS := $(patsubst -O2,,$(CXXFLAGS))
</makefile>
</Architecture>

